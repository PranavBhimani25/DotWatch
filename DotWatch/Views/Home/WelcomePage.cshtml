@{
    ViewData["Title"] = "Welcome to Performance Monitoring";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .welcome-box {
            background-color: #1e1e1e;
            border: 1px solid #2e2e2e;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
        }

            .welcome-box h1 {
                color: #ffffff;
            }

            .welcome-box p {
                color: #cccccc;
            }

        .list-group-item {
            background-color: #2a2a2a;
            border: 1px solid #333;
            color: #ddd;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }
    </style>
</head>
<body>
    <div class="container text-center my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="welcome-box">
                    <h1 class="display-5 mb-3">👋 Welcome to Performance Monitoring Dashboard</h1>
                    <p class="lead mb-4">
                        Monitor your ASP.NET Core application's performance in real-time using
                        <strong>Grafana</strong> and <strong>Prometheus</strong>.
                    </p>

                    <ul class="list-group text-start mb-4">
                        <li class="list-group-item">✅ CPU & Memory Usage</li>
                        <li class="list-group-item">✅ Request Rate & Response Time</li>
                        <li class="list-group-item">✅ Auto-refreshing Live Panels</li>
                        <li class="list-group-item">✅ Clean UI with Bootstrap Dark Theme</li>
                    </ul>

                    <a href="/Dashboard/Index" class="btn btn-primary btn-lg px-4">View Live Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
