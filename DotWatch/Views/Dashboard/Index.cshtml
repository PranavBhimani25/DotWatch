@{
    ViewData["Title"] = "Live Performance Monitoring";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .dashboard-title {
            margin: 20px 0;
            text-align: center;
            font-size: 2rem;
            font-weight: bold;
        }

        .panel-frame {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.7);
            background-color: #1e1e1e;
            margin-bottom: 20px;
        }

        .panel-label {
            margin-bottom: 5px;
            font-size: 1rem;
            color: #bbbbbb;
        }

        .container-custom {
            padding: 30px;
        }

        .card-dark {
            background-color: #1e1e1e;
            border: 1px solid #2e2e2e;
            border-radius: 10px;
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="container-fluid container-custom">
        <div class="dashboard-title text-white"> ASP.NET Core Performance Dashboard</div>

        <div class="row">
            <div class="col-md-6 col-xl-6">
                <div class="panel-label">
                    Request Count (1m rate)
                </div>
                <iframe src="http://127.0.0.1:3000/d-solo/6ca5ba99-34a1-4a86-ba45-b1fa4d569dc9/asp-net-performance-monitoring?orgId=1&from=now-5m&to=now&refresh=5s&panelId=2"
                        width="100%" height="200" frameborder="0" class="rounded"></iframe>
                

            </div>

            <div class="col-md-6 col-xl-6">
                <div class="panel-label">
                    Memory Usage (MB)
                </div>
                <iframe src="http://localhost:3000/d-solo/6ca5ba99-34a1-4a86-ba45-b1fa4d569dc9/asp-net-performance-monitoring?orgId=1&from=now-5m&to=now&timezone=browser&refresh=5s&theme=dark&panelId=7"
                        width="100%" height="200" frameborder="0" class="rounded"></iframe>
            </div>

            <div class="col-md-6 col-xl-6">
                <div class="panel-label">Average Request Duration</div>
                <iframe src="http://localhost:3000/d-solo/6ca5ba99-34a1-4a86-ba45-b1fa4d569dc9/asp-net-performance-monitoring?orgId=1&from=now-5m&to=now&timezone=browser&refresh=5s&theme=dark&panelId=3"
                        width="100%" height="200" frameborder="0" class="rounded"></iframe>
            </div>

            <div class="col-md-6 col-xl-6">
                <div class="panel-label">
                    CPU Usage (%)
                </div>
                <iframe src="http://localhost:3000/d-solo/6ca5ba99-34a1-4a86-ba45-b1fa4d569dc9/asp-net-performance-monitoring?orgId=1&from=now-5m&to=now&timezone=browser&refresh=5s&theme=dark&panelId=5"
                        width="100%" height="200" frameborder="0" class="rounded"></iframe>
            </div>
        </div>

        <div class="row mt-4 " >
            <div class="col-md-6 col-xl-6">
                <div class="panel-label">Error rate (5xx)</div>
                <iframe src="http://localhost:3000/d-solo/6ca5ba99-34a1-4a86-ba45-b1fa4d569dc9/asp-net-performance-monitoring?orgId=1&from=now-5m&to=now&timezone=browser&refresh=5s&theme=dark&panelId=6"
                        width="100%" height="200" frameborder="0" class="rounded"></iframe>
            </div>
        </div>
    </div>
</body>
</html>
